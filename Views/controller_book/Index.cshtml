@model IEnumerable<Book_Store.Modules.Book>

@{
    ViewData["Title"] = "Index";
}


<h1>Information Books</h1>
<hr />

<table class="table table-bordered table-success" style=" border: 5px solid #92acc6;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descreption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.author.full_name)
            </th>
            <th>@Html.DisplayNameFor(model => model.UrlFile)</th>
            <th>Processess</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.Raw(item.descreption) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.author.full_name)
            </td>
            @{
                if (item.UrlFile != null)
                {
                    <td>
                        <img src="~/AllFiles/@item.UrlFile" style="width: 120px" />
                    </td>
                }
                else
                {
                    <td></td>
                }
            }


            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-success" style="font-weight:bold">Add New Book</a>
</div>


