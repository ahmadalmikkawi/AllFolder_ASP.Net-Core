@model IEnumerable<Book_Store.Modules.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Information Authors</h1>
<hr />

<table class="table table-bordered table-success" style=" border: 5px solid #92acc6;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.full_name)
            </th>
            <th>Processess On Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.full_name)
                </td>
                <td>
                    <span> @Html.ActionLink("Details", "Details", new { id = item.id })</span> |
                    <span>@Html.ActionLink("Edit", "Edit", new { id = item.id }) </span> |
                    <span> @Html.ActionLink("Delete", "Delete", new { id = item.id })</span>
                </td>

            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-success" style="font-weight:bold">Add New Author</a>
</div>
